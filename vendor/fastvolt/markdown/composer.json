{
    "name": "fastvolt/markdown",
    "description": "A Fast, Simple and Straight-forward Markdown to HTML Converter for PHP.",
    "keywords": [
        "markdown",
        "markdown-to-html",
        "markdown-parser",
        "markdown-library"
    ],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "FastVolt\\Helper\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Oladoyinbo Vincent",
            "email": "oladoyinboadverts@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-tokenizer": "*",
        "ext-xml": "*",
        "ext-xmlwriter": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "friendsofphp/php-cs-fixer": "^3.38"
    }
}
